<h1>My tasks</h1>
<ul style="list-style-type: none">
<% @tasks.each do |task| %>
<li><%=check_box_tag('completion', value = "1",checked = task.completed)%> <%= link_to task.title, task_path(task) %> *
<%= link_to task_path(task),data: {turbo_method: :delete, turbo_confirm: "Delete this task?"} do %><i class="fa-solid fa-trash-can"></i><% end %></li>
<% end %>
</ul>

<%= link_to " + Add a new task", new_task_path %>
